@model JongBrabant.Kantinescherm.Models.GroupEntry

@{
    ViewData["Title"] = "Groep toevoegen";
}

<h1>Toevoegen</h1>

<h4>Groep</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	        <div class="form-group">
		        <label asp-for="GroupName" class="control-label"></label>
		        <input asp-for="GroupName" class="form-control" />
		        <span asp-validation-for="GroupName" class="text-danger"></span>
	        </div>
	        <div class="form-group">
		        <label asp-for="Order" class="control-label"></label>
		        <input asp-for="Order" class="form-control" />
		        <span asp-validation-for="Order" class="text-danger"></span>
	        </div>
	        <div class="form-group">
		        <label asp-for="ShowHeader" class="control-label"></label>
		        <input asp-for="ShowHeader" class="form-control" />
		        <span asp-validation-for="ShowHeader" class="text-danger"></span>
	        </div>
	        <div class="form-group">
                <input type="submit" value="Maken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar groepen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
