@{
    ViewData["Title"] = "Wachtwoord vereist";
}
<h2>Wachtwoord vereist</h2>
@if (ViewData["Error"] != null)
{
    <div style="color:red">@ViewData["Error"]</div>
}
<form asp-action="PasswordPrompt" method="post">
    <input type="password" name="password" placeholder="Wachtwoord" autofocus />
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    <button type="submit">Inloggen</button>
</form>