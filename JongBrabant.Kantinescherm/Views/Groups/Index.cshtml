@model IEnumerable<JongBrabant.Kantinescherm.Models.GroupEntry>

@{
    ViewData["Title"] = "Groepen";
}

<h1>Groepen</h1>

<p>
    <a asp-action="Create">Nieuwe groep maken</a>
</p>
<table class="table">
    <thead>
        <tr>
	        <th>
		        @Html.DisplayNameFor(model => model.GroupName)
	        </th>
	        <th>
		        @Html.DisplayNameFor(model => model.Order)
	        </th>
	        <th>
				@Html.DisplayNameFor(model => model.ShowHeader)
			</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
	        <td>
		        @Html.DisplayFor(modelItem => item.GroupName)
	        </td>
	        <td>
		        @Html.DisplayFor(modelItem => item.Order)
	        </td>
	        <td>
		        @Html.DisplayFor(modelItem => item.ShowHeader)
	        </td>
	        <td>
		        <a asp-action="Edit" asp-route-id="@item.GroupId">Wijzigen</a> |
		        <a asp-action="Delete" asp-route-id="@item.GroupId">Verwijderen</a>
	        </td>
        </tr>
}
    </tbody>
</table>
