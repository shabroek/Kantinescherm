@model JongBrabant.Kantinescherm.Models.ProductEntry

@{
    ViewData["Title"] = "Product toevoegen";
}

<h1>Toevoegen</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
	        <div class="form-group">
		        <label asp-for="Price" class="control-label"></label>
		        <input asp-for="Price" class="form-control" />
		        <span asp-validation-for="Price" class="text-danger"></span>
	        </div>
	        <div class="form-group">
		        <label asp-for="Group" class="control-label"></label>
		        <select asp-for="GroupId" class="form-control" asp-items="@((List<SelectListItem>)ViewData["Groups"])">

		        </select>
		        <span asp-validation-for="Group" class="text-danger"></span>
	        </div>
	        <div class="form-group">
		        <label asp-for="Order" class="control-label"></label>
		        <input asp-for="Order" class="form-control" />
				<span asp-validation-for="Order" class="text-danger"></span>
	        </div>
            <div class="form-group">
                <input type="submit" value="Toevoegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
